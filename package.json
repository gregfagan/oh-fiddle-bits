{
  "name": "oh-fiddle-bits",
  "homepage": ".",
  "repository": {
    "type": "git",
    "url": "https://github.com/gregfagan/oh-fiddle-bits.git"
  },
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "cross-env": "^5.2.0",
    "d3-ease": "^1.0.5",
    "gh-pages": "2.0.1",
    "husky": "1.1.4",
    "lint-staged": "8.0.5",
    "prettier": "^1.15.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-measure": "^2.1.3",
    "react-scripts": "^2.1.1",
    "styled-components": "^4.1.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "predeploy": "npm run build",
    "start": "cross-env-shell BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "deploy": "gh-pages -d build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
